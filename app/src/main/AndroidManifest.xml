<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.tourneymanager">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ModeSelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.player.PlayerTotalsActivity" />
        <activity android:name=".ui.manager.MatchListActivity" />
        <activity android:name=".ui.manager.AddPlayerActivity" />
        <activity
            android:name=".ui.manager.ManagerControlsActivity"
            android:label="@string/title_activity_manager_controls" />
        <activity
            android:name=".ui.manager.RemovePlayerActivity"
            android:label="@string/title_activity_remove_player" />
        <activity
            android:name=".ui.manager.StartTournamentActivity"
            android:label="@string/title_activity_start_tournament" />
        <activity
            android:name=".ui.manager.HouseProfitsActivity"
            android:label="@string/title_activity_house_profits" />
        <activity
            android:name=".ui.manager.ReviewTournamentActivity"
            android:label="@string/title_activity_review_tournament" />

        <meta-data
            android:name="DATABASE"
            android:value="tourney.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="edu.gatech.seclass.tourneymanager" />

        <activity
            android:name=".ui.player.PlayerTourneyActivity"
            android:label="@string/title_activity_player_tourney" />
        <activity android:name=".ui.manager.ManagerPlayerTotals"></activity>
    </application>

</manifest>